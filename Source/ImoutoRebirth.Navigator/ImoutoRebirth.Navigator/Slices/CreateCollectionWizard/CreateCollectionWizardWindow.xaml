<mah:MetroWindow x:Class="ImoutoRebirth.Navigator.Slices.CreateCollectionWizard.CreateCollectionWizardWindow"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:local="clr-namespace:ImoutoRebirth.Navigator.Slices.CreateCollectionWizard"
                          xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                          xmlns:steps="clr-namespace:ImoutoRebirth.Navigator.Slices.CreateCollectionWizard.Steps"
                          mc:Ignorable="d"
                          Title="Create"
                          Height="614"
                          Width="1028"
                          WindowStartupLocation="CenterScreen"
                          BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                          BorderThickness="2"
                          TitleCharacterCasing="Upper"
                          ResizeMode="CanMinimize"
                          WindowButtonCommandsOverlayBehavior="Never"
                          ResizeBorderThickness="5"
                          Icon="pack://application:,,,/ImoutoRebirth.Navigator;component/Resources/Icon/window-icon.ico"
                          ShowIconOnTitleBar="False"
                          ShowTitleBar="False"
                          FontFamily="Roboto"
                          Background="{DynamicResource MahApps.Brushes.Flyout.Background}"
                          d:DataContext="{d:DesignInstance Type={x:Type local:DesignTimeWizardRootVM}, d:IsDesignTimeCreatable=True}">
    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="WizardControls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </mah:MetroWindow.Resources>

    <Grid Margin="50, 40, 50, 40">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock 
                Text="{Binding State.Title, FallbackValue='New collection'}" 
                Style="{DynamicResource Styles.Typography.Title}" />

            <TextBlock 
                Grid.Column="1"
                Text="{Binding State.TitleCenter}" 
                Style="{DynamicResource Styles.Typography.Title}"
                HorizontalAlignment="Center" />

            <TextBlock 
                Grid.Column="1"
                Text="{Binding State.TitleProgress}" 
                Style="{DynamicResource Styles.Typography.Title}"
                HorizontalAlignment="Right" />
        </Grid>
    
        <ContentControl
            x:Name="StageControl" 
            Grid.Row="1"
            Content="{Binding Path=State.CurrentStageControl}" />
    </Grid>
</mah:MetroWindow>
