<UserControl x:Class="ImoutoRebirth.Navigator.Slices.CreateCollectionWizard.Steps.AdvancedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ImoutoRebirth.Navigator.Slices.CreateCollectionWizard"
             mc:Ignorable="d"
             d:DesignHeight="524"
             d:DesignWidth="928"
             d:DataContext="{d:DesignInstance Type={x:Type local:DesignTimeWizardRootVM}, d:IsDesignTimeCreatable=True}"
             FontFamily="Roboto">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WizardControls.xaml" />
                <ResourceDictionary Source="../IconsSvg.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Height" Value="40" />
                <Setter Property="FontSize" Value="26" />
                <Setter Property="Padding" Value="11 0" />
            </Style>

            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontWeight" Value="Regular" />
                <Setter Property="Foreground" Value="#F6F6F6" />
            </Style>

            <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button.Flat}" x:Key="CollectionTypeButton">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="FontFamily" Value="Roboto" />
                <Setter Property="FontWeight" Value="Regular" />
                <Setter Property="Background" Value="#2F2F2F" />
                <Setter Property="BorderBrush" Value="#F6F6F6" />
                <Setter Property="BorderThickness" Value="1" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Margin="65 0 65 0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Width="331">
                <Image Source="{StaticResource Icons.Svg.SingleFolder}"
                       Width="104"
                       Height="73"
                       Margin="0,23,0,33" />

                <Button
                    Style="{DynamicResource Styles.Button.Regular}"
                    Width="331"
                    Height="55"
                    Margin="0"
                    Command="{Binding State.SelectSingleFolderSetupCommand}"
                    Content="single folder" />

                <TextBlock Margin="30 31 30 0">
                    <TextBlock Text="•" Margin="0 0 5 0" FontSize="40" />
                    <TextBlock Text="use already existing folder and don’t change any files"
                               Margin="0 0 15 0" 
                               TextWrapping="Wrap"
                               LineHeight="16"
                               Style="{StaticResource Styles.Typography.LessButVisible}" />
                    <LineBreak />

                    <TextBlock Text="•" Margin="0 0 5 0" FontSize="40" />
                    <TextBlock Text="files will be scanned and added to the collection" 
                               Margin="0 0 15 0"
                               TextWrapping="Wrap"
                               LineHeight="16"
                               Style="{StaticResource Styles.Typography.LessButVisible}" />
                    <LineBreak />

                    <TextBlock Text="•" Margin="0 0 5 0" FontSize="40" />
                    <TextBlock Text="remember to save files as originals if you want to get tags from boorus"
                               Margin="0 0 15 0" 
                               TextWrapping="Wrap"
                               LineHeight="16"
                               Style="{StaticResource Styles.Typography.LessButVisible}" />
                    <LineBreak />

                    <TextBlock Text="•" Margin="0 0 5 0" FontSize="40" />
                    <TextBlock Text="" 
                               Margin="0 0 15 0" 
                               TextWrapping="Wrap"
                               LineHeight="16"
                               Style="{StaticResource Styles.Typography.LessButVisible}">
                        <Run Text="subfolder names will be added as tags " /><Run FontWeight="Thin">(can be changed in advanced)</Run>
                    </TextBlock>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Width="331">
                <Image Source="{StaticResource Icons.Svg.MultipleFolders}"
                       Width="118"
                       Height="104"
                       Margin="0,9,0,16" />

                <Button
                    Style="{DynamicResource Styles.Button.Regular}"
                    Width="331"
                    Height="55"
                    Margin="0"
                    Command="{Binding State.SelectDedicatedFolderSetupCommand}"
                    Content="dedicated folder" />

                <TextBlock Margin="30 31 30 0">
                    <TextBlock Text="•" Margin="0 -55 5 0" FontSize="40" />
                    <TextBlock Text="store your collection in well-managed manner, using source folders to place new files and destination folder to store your collection"
                               Margin="0 0 15 0" 
                               TextWrapping="Wrap"
                               LineHeight="16"
                               Style="{StaticResource Styles.Typography.LessButVisible}" />
                    <LineBreak />

                    <TextBlock Text="•" Margin="0 10 5 0" FontSize="40" />
                    <TextBlock Text="files will be moved from source folders to the destination folder"
                               Margin="0 10 15 0" 
                               TextWrapping="Wrap"
                               LineHeight="16"
                               Style="{StaticResource Styles.Typography.LessButVisible}" />
                    <LineBreak />
                </TextBlock>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="cancel"
                    Command="{Binding CloseCommand}"
                    Style="{DynamicResource Styles.Button.Regular}" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="back"
                    Command="{Binding State.BackCommand}"
                    Style="{DynamicResource Styles.Button.Regular}" />

            <Button Content="next"
                    Style="{DynamicResource Styles.Button.Accent}"
                    Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</UserControl>
