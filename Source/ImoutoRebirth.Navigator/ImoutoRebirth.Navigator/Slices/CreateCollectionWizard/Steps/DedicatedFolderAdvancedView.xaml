<UserControl x:Class="ImoutoRebirth.Navigator.Slices.CreateCollectionWizard.Steps.DedicatedFolderAdvancedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ImoutoRebirth.Navigator.Slices.CreateCollectionWizard"
             xmlns:controls="clr-namespace:ImoutoRebirth.Navigator.Slices.CreateCollectionWizard.Controls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="524" 
             d:DesignWidth="928"
             d:DataContext="{d:DesignInstance Type={x:Type local:DesignTimeWizardRootVM}, d:IsDesignTimeCreatable=True}"
             FontFamily="Roboto">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WizardControls.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Height" Value="25" />
                <Setter Property="FontSize" Value="13" />
                <Setter Property="Padding" Value="7 3" />
            </Style>

            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontSize" Value="19" />
                <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Gray2}" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" /> 
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="94 50 10 50">
            <StackPanel Margin="0 0 0 20">
                <TextBlock Text="destination folder" Style="{DynamicResource Styles.Typography.Note}" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Text="{Binding State.DestinationFolder.Path}" />

                    <Button
                        Grid.Column="1"
                        Width="26"
                        Height="26"
                        Margin="8 0 8 0"
                        Style="{DynamicResource Styles.Button.Icon}"
                        Command="{Binding State.DestinationFolder.BrowsePathLocationCommand}">
                        <iconPacks:PackIconLucide
                            Width="16"
                            Height="16" Kind="FolderSearch" />
                    </Button>

                    <Button
                        Grid.Column="2"
                        Width="26"
                        Height="26"
                        Margin="0 0 0 0"
                        Style="{DynamicResource Styles.Button.Icon}"
                        Command="{Binding State.SelectCommand}"
                        CommandParameter="{Binding State.DestinationFolder}">
                        <iconPacks:PackIconLucide
                            Width="16"
                            Height="16" Kind="Cpu" />
                    </Button>
                </Grid>
            </StackPanel>
            <StackPanel Margin="0 0 0 20">
                <TextBlock Text="source folders" Style="{DynamicResource Styles.Typography.Note}" />

                <ItemsControl ItemsSource="{Binding State.SourceFolders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:WizardSourceFolderVM}">
                            <Grid Margin="0 0 0 10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" Text="{Binding Path}" />

                                <Button
                                    Grid.Column="1"
                                    Width="26"
                                    Height="26"
                                    Margin="8 0 8 0"
                                    Style="{DynamicResource Styles.Button.Icon}"
                                    Command="{Binding BrowsePathLocationCommand}">
                                    <iconPacks:PackIconLucide
                                        Width="16"
                                        Height="16" Kind="FolderSearch" />
                                </Button>

                                <Button
                                    Grid.Column="2"
                                    Width="26"
                                    Height="26"
                                    Margin="0 0 0 0"
                                    Style="{DynamicResource Styles.Button.Icon}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.State.SelectCommand}"
                                    CommandParameter="{Binding}">
                                    <iconPacks:PackIconLucide
                                        Width="16"
                                        Height="16" Kind="Cpu" />
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="add"
                        Width="77"
                        Height="25"
                        FontSize="13"
                        HorizontalAlignment="Left"
                        Command="{Binding State.AddSourceFolderCommand}"
                        Margin="0 10 0 0"
                        Style="{DynamicResource Styles.Button.Regular}" />
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="0" Grid.Column="1" Background="{DynamicResource MahApps.Brushes.Gray4}" Width="4" Height="340" CornerRadius="2" Margin="15 0 15 0"/>

        <StackPanel Grid.Row="0"
                    Grid.Column="2"
                    Margin="10 50 94 50"
                    DataContext="{Binding State.SelectedSourceFolderToSetupInDedicatedFolderAdvancedView}"
                    Visibility="{Binding Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter=!null}">

            <TextBlock Text="Source Folder Options"
                       Style="{DynamicResource Styles.Typography.Base}"
                       Margin="0 0 0 10"/>

            <TextBlock Text="{Binding Path}"
                       Style="{DynamicResource Styles.Typography.Note}"
                       Margin="0 0 0 10"/>

            <mah:ToggleSwitch IsOn="{Binding ShouldCheckHashFromName}"
                              Foreground="{DynamicResource MahApps.Brushes.Gray2}">
                check hash in file name
            </mah:ToggleSwitch>

            <mah:ToggleSwitch IsOn="{Binding ShouldCheckFormat}"
                              Foreground="{DynamicResource MahApps.Brushes.Gray2}">
                check file format (for images only)
            </mah:ToggleSwitch>

            <mah:ToggleSwitch IsOn="{Binding ShouldCreateTagsFromSubfolders}"
                              Foreground="{DynamicResource MahApps.Brushes.Gray2}">
                add subfolders names as tags
            </mah:ToggleSwitch>

            <mah:ToggleSwitch IsOn="{Binding ShouldAddTagFromFilename}"
                              Foreground="{DynamicResource MahApps.Brushes.Gray2}">
                add file name as tag
            </mah:ToggleSwitch>

            <controls:ExtensionTagsControl Extensions="{Binding SupportedExtensions}" 
                                           Margin="0 15 0 0" />

            <Button Content="delete"
                    Width="77"
                    Height="25"
                    FontSize="11"
                    HorizontalAlignment="Right"
                    Command="{Binding DataContext.State.RemoveSourceFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding}"
                        Margin="0 3 0 0"
                    Style="{DynamicResource Styles.Button.Regular}" />
        </StackPanel>

        <StackPanel Grid.Row="0"
                    Grid.Column="2"
                    Margin="10 50 94 50"
                    DataContext="{Binding State.SelectedDestinationFolderToSetupInDedicatedFolderAdvancedView}"
                    Visibility="{Binding Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter=!null}">
            <TextBlock Text="Destination Folder Options"
                       Style="{DynamicResource Styles.Typography.Base}"
                       Margin="0 0 0 10"/>

            <TextBlock Text="{Binding Path=Path}"
                       Style="{DynamicResource Styles.Typography.Note}"
                       Margin="0 0 0 10"/>

            <mah:ToggleSwitch IsOn="{Binding ShouldCreateSubfoldersByHash}"
                              Foreground="{DynamicResource MahApps.Brushes.Gray2}">
                use hash-based subfolders
            </mah:ToggleSwitch>

            <mah:ToggleSwitch IsOn="{Binding ShouldRenameByHash}"
                              Foreground="{DynamicResource MahApps.Brushes.Gray2}">
                rename files to &lt;hash&gt;.&lt;ext&gt;
            </mah:ToggleSwitch>

            <StackPanel Margin="0 15 0 0">
                <TextBlock Text="subfolder name for files in invalid format" Style="{DynamicResource Styles.Typography.Note}" />
                <TextBox Text="{Binding FormatErrorSubfolder}" />
            </StackPanel>

            <StackPanel Margin="0 15 0 0">
                <TextBlock Text="subfolder name for files with invalid hash in name" Style="{DynamicResource Styles.Typography.Note}" />
                <TextBox Text="{Binding HashErrorSubfolder}" />
            </StackPanel>

            <StackPanel Margin="0 15 0 0">
                <TextBlock Text="subfolder name for files without hash in name" Style="{DynamicResource Styles.Typography.Note}" />
                <TextBox Text="{Binding WithoutHashErrorSubfolder}" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="cancel"
                    Command="{Binding CloseCommand}"
                    Style="{DynamicResource Styles.Button.Regular}"
                    Margin="0 0 0 0" />
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="back"
                    Command="{Binding State.BackCommand}"
                    Style="{DynamicResource Styles.Button.Regular}" />

            <Button Content="create"
                    Command="{Binding State.AdvancedCreateCommand}"
                    Style="{DynamicResource Styles.Button.Accent}" />
        </StackPanel>
    </Grid>
</UserControl>

