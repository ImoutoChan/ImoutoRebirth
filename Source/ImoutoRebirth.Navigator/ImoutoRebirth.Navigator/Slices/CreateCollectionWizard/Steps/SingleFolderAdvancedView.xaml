<UserControl x:Class="ImoutoRebirth.Navigator.Slices.CreateCollectionWizard.Steps.SingleFolderAdvancedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ImoutoRebirth.Navigator.Slices.CreateCollectionWizard"
             xmlns:controls="clr-namespace:ImoutoRebirth.Navigator.Slices.CreateCollectionWizard.Controls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="524" 
             d:DesignWidth="928"
             d:DataContext="{d:DesignInstance Type={x:Type local:DesignTimeWizardRootVM}, d:IsDesignTimeCreatable=True}"
             FontFamily="Roboto">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WizardControls.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Height" Value="40" />
                <Setter Property="FontSize" Value="26" />
                <Setter Property="Padding" Value="11 0" />
            </Style>

            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontSize" Value="19" />
                <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Gray2}" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="94 50 94 50" DataContext="{Binding State.SourceFolders[0]}">
            <StackPanel Margin="0 0 0 20">
                <TextBlock Text="source folder" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Text="{Binding Path}" />

                    <Button
                        Grid.Column="1"
                        Content="browse"
                        Style="{DynamicResource Styles.Button.Regular}"
                        Command="{Binding BrowsePathLocationCommand}"/>
                </Grid>
            </StackPanel>

            <mah:ToggleSwitch IsOn="{Binding ShouldCheckHashFromName}"
                              Foreground="{DynamicResource MahApps.Brushes.Gray2}">
                check hash in file name
            </mah:ToggleSwitch>

            <mah:ToggleSwitch IsOn="{Binding ShouldCheckFormat}"
                              Foreground="{DynamicResource MahApps.Brushes.Gray2}">
                check file format (for images only)
            </mah:ToggleSwitch>

            <mah:ToggleSwitch IsOn="{Binding ShouldCreateTagsFromSubfolders}"
                              Foreground="{DynamicResource MahApps.Brushes.Gray2}">
                add subfolders names as tags
            </mah:ToggleSwitch>

            <mah:ToggleSwitch IsOn="{Binding ShouldAddTagFromFilename}"
                              Foreground="{DynamicResource MahApps.Brushes.Gray2}">
                add file name as tag
            </mah:ToggleSwitch>

            <controls:ExtensionTagsControl Extensions="{Binding SupportedExtensions}" 
                                           Margin="0 15 0 0" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="cancel"
                    Command="{Binding CloseCommand}"
                    Style="{DynamicResource Styles.Button.Regular}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="back"
                    Command="{Binding State.BackCommand}"
                    Style="{DynamicResource Styles.Button.Regular}" />

            <Button Content="create"
                    Command="{Binding State.AdvancedCreateCommand}"
                    Style="{DynamicResource Styles.Button.Accent}" />
        </StackPanel>
    </Grid>
</UserControl>
