<UserControl x:Class="ImoutoRebirth.Tori.UI.UserControls.InstallWizardStepsProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             x:Name="InstallProgressUserControl">
    <StackPanel Orientation="Horizontal">
        <Image Source="{StaticResource RingDrawingImage}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='>0'}" />

        <Image Source="{StaticResource RingDrawingImage.Gray}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='0'}" />
 
        <Image Margin="18,0"
               Source="{StaticResource BarDrawingImage}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='>1'}" />

        <Image Margin="18,0"
               Source="{StaticResource BarDrawingImage.Gray}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='&lt;2'}" />

        <Image Source="{StaticResource RingDrawingImage}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='>1'}" />

        <Image Source="{StaticResource RingDrawingImage.Gray}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='&lt;2'}" />

        <Image Margin="18,0"
               Source="{StaticResource BarDrawingImage}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='>2'}" />

        <Image Margin="18,0"
               Source="{StaticResource BarDrawingImage.Gray}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='&lt;3'}" />

        <Image Source="{StaticResource RingDrawingImage}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='>2'}" />

        <Image Source="{StaticResource RingDrawingImage.Gray}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='&lt;3'}" />

        <Image Margin="18,0"
               Source="{StaticResource BarDrawingImage}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='>3'}" />

        <Image Margin="18,0"
               Source="{StaticResource BarDrawingImage.Gray}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='&lt;4'}" />

        <Image Source="{StaticResource RingDrawingImage}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='>3'}" />

        <Image Source="{StaticResource RingDrawingImage.Gray}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='&lt;4'}" />

        <Image Margin="18,0"
               Source="{StaticResource BarDrawingImage}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='>4'}" />

        <Image Margin="18,0"
               Source="{StaticResource BarDrawingImage.Gray}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='&lt;5'}" />

        <Image Source="{StaticResource RingDrawingImage}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='>4'}" />

        <Image Source="{StaticResource RingDrawingImage.Gray}"
               Visibility="{Binding ElementName=InstallProgressUserControl, Path=State, Converter={StaticResource ConditionVisibilityConverter}, ConverterParameter='&lt;5'}" />
    </StackPanel>
</UserControl>
