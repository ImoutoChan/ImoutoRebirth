<UserControl x:Class="ImoutoRebirth.Tori.UI.UserControls.RevealImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <Grid>
        <Image x:Name="AnimatedImage"
               Source="{Binding Source, ElementName=Root}">
            <Image.Clip>
                <RectangleGeometry x:Name="ClipRect" Rect="0,0,0,100"/>
            </Image.Clip>
        </Image>
    </Grid>
</UserControl>