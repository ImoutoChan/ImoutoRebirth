<UserControl x:Class="ImoutoRebirth.Tori.UI.Steps.Installation.InstallationStepControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImoutoRebirth.Tori.UI.Steps.Installation"
             xmlns:userControls="clr-namespace:ImoutoRebirth.Tori.UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="614" d:DesignWidth="1028"
             d:DataContext="{d:DesignInstance Type=local:InstallationStepViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="144, 73, 144, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
        </Grid>

        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal" Margin="50, 0, 50, 40">
            <Button Style="{DynamicResource Styles.Button.Regular}" Command="{Binding GoBackCommand}">back</Button>
            <Button Style="{DynamicResource Styles.Button.Accent}" Command="{Binding InstallCommand}">install</Button>
        </StackPanel>
    </Grid>
</UserControl>
