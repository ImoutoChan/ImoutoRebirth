<UserControl x:Class="ImoutoNavigator.View.TagsSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ImoutoNavigator.View"
             xmlns:metroControl="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:imoutoNavigator="clr-namespace:ImoutoNavigator"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid>
        <Border Grid.Column="0"
                BorderThickness="0,0,3,0"
                BorderBrush="{DynamicResource AccentColorBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <TextBox Grid.Row="0"
                         Margin="5"
                         metroControl:TextboxHelper.Watermark="Search tag"
                         Style="{DynamicResource SearchMetroTextBox}"
                         FontSize="14"
                         Text="{Binding Path=SearchString, UpdateSourceTrigger=PropertyChanged}" />

                <!--<ComboBox Grid.Row="0" 
                              Margin="5"
                              metroControl:TextboxHelper.Watermark="Search tag"
                              FontSize="14"
                              DisplayMemberPath="Name"
                              IsEditable="True"
                              ItemsSource="{Binding SearchTags}"
                              MaxDropDownHeight="125"
                              Text="{Binding Path=SearchString}" />-->

                <Border Grid.Row="1"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource AccentColorBrush}">

                </Border>

                <ItemsControl x:Name="SelectedTags"
                              Grid.Row="2"
                              ItemsSource="{Binding Path=SelectedTags, UpdateSourceTrigger=PropertyChanged}"
                              ItemTemplate="{StaticResource SelectedTagsElementDataTemplate}" />

                <Border Grid.Row="3"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource AccentColorBrush}" />

                <ItemsControl x:Name="CurrentTags"
                              Grid.Row="4"
                              ItemsSource="{Binding Path=TopTags, UpdateSourceTrigger=PropertyChanged}"
                              ItemTemplate="{StaticResource CurrentTagElementDataTemplate}" />
            </Grid>
        </Border>

        <Border Grid.Column="0"
                BorderThickness="0"
                BorderBrush="{DynamicResource GrayBrush7}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="5,32,9,0">
            <ListBox ItemsSource="{Binding HintBoxTags}"
                     Padding="0"
                     ItemContainerStyle="{StaticResource SearchHintListBoxItemContainerStyle}"
                     ScrollViewer.CanContentScroll="False"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     VirtualizingPanel.ScrollUnit="Item">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                 AncestorType={x:Type UserControl}},
                                                                                 Path=DataContext.SelectTagCommand}"
                                CommandParameter="{Binding}"
                                Template="{StaticResource TagElementControlTemplate}"
                                HorizontalContentAlignment="Left">
                            <TextBlock Text="{Binding Title}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</UserControl>
